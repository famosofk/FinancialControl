<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <Button
        android:id="@+id/cancelarPagarPendencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="@drawable/round_background_blue"
        android:text="@string/cancelar_intro"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/pagarPendenciaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@drawable/round_background_orange"
        android:text="@string/confirmar_intro"
        android:textColor="@android:color/white" />
</LinearLayout>